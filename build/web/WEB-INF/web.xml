<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>HomePageServlet</servlet-name>
        <servlet-class>servlets.HomePageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.Lservlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>opportunity</servlet-name>
        <servlet-class>opportunity</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginowner</servlet-name>
        <servlet-class>loginowner</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OpportunityServlet</servlet-name>
        <servlet-class>com.xadmin.usermanagement.web.OpportunityServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>User1Servlet</servlet-name>
        <servlet-class>com.xadmin.usermanagement.web.User1Servlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ApplicationServlet</servlet-name>
        <servlet-class>com.xadmin.usermanagement.web.ApplicationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>application</servlet-name>
        <servlet-class>application</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomePageServlet</servlet-name>
        <url-pattern>/Home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>opportunity</servlet-name>
        <url-pattern>/opportunity</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loginowner</servlet-name>
        <url-pattern>/loginowner</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OpportunityServlet</servlet-name>
        <url-pattern>/opportunity/new</url-pattern>
        <url-pattern>/opportunity/insert</url-pattern>
        <url-pattern>/opportunity/delete</url-pattern>
        <url-pattern>/opportunity/update</url-pattern>
        <url-pattern>/opportunity/list</url-pattern>
        <url-pattern>/opportunity/edit</url-pattern>
        <url-pattern>/opportunity/apply</url-pattern>
        <url-pattern>/opportunity/confirm</url-pattern>
        <url-pattern>/opportunity/list2</url-pattern>
        <url-pattern>/opportunity/list3</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>User1Servlet</servlet-name>
        <url-pattern>/user/new</url-pattern>
        <url-pattern>/user/insert</url-pattern>
        <url-pattern>/user/delete</url-pattern>
        <url-pattern>/user/update</url-pattern>
        <url-pattern>/user/list</url-pattern>
        <url-pattern>/user/edit</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ApplicationServlet</servlet-name>
        <url-pattern>/application/insert</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>application</servlet-name>
        <url-pattern>/application</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/Error.jsp</location>
    </error-page>
</web-app>
